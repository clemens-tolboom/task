    $entity_info['task']['bundles'][$type] = array(
      'label' => $info->label,
      'admin' => array(
        'path' => 'admin/structure/task-types/manage/%task_type',
        'real path' => 'admin/structure/task-types/manage/' . $type,
        'bundle argument' => 4,
      ),
    );
  }
}

